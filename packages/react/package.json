{
  "name": "@unmail/react",
  "version": "0.1.0",
  "description": "Unstyled components for creating beautiful emails with React",
  "sideEffects": false,
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts --external react --external react-dom --external prettier --external html-to-text --external tailwindcss --external css-tree --external marked",
    "dev": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "html-to-text": "^9.0.5",
    "prettier": "^3.5.3",
    "prismjs": "^1.30.0"
  },
  "optionalDependencies": {
    "css-tree": "^3.1.0",
    "marked": "^15.0.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/css-tree": "^2.3.10",
    "@types/html-to-text": "^9.0.4",
    "@types/prismjs": "^1.26.6",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsconfig": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unmail/unmail",
    "directory": "packages/react"
  },
  "homepage": "https://unmail.github.io/unmail/",
  "keywords": [
    "react",
    "email",
    "components",
    "tailwind",
    "unstyled"
  ]
}
