{
  "name": "@unmail/vue",
  "version": "0.1.2",
  "description": "Unstyled components for creating beautiful emails with Vue",
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --external vue --external html-to-text --external tailwindcss --external marked",
    "dev": "tsdown src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "html-to-text": "^9.0.5"
  },
  "optionalDependencies": {
    "marked": "^15.0.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "css-tree": "^3.1.0",
    "tsconfig": "workspace:*",
    "tsdown": "0.20.3",
    "vite": "7.3.1",
    "vue": "^3.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unmail/unmail",
    "directory": "packages/vue"
  },
  "homepage": "https://unmail.github.io/unmail/",
  "keywords": [
    "vue",
    "email",
    "components",
    "tailwind",
    "unstyled"
  ]
}
