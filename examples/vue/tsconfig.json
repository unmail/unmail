{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
